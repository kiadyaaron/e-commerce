<div class="product-item text-center">
    <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/uploads/images/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}" >
    <h5 class="black">{{ product.name }}</h5>
    <span class="product-subtitle">{{ product.subtitle }}</span>
    <span class="product-price">{{ (product.price/100)|number_format(2, ',', '.') }} MGA</span>
</div>